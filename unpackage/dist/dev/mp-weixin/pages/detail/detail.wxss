.interactionBar {
  position: fixed;
  bottom: 0px;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  font-size: 25rpx;
}
.interactionBar .bottom_item {
  display: inline-block;
  text-align: center;
  height: 88rpx;
  width: 88rpx;
  padding: 5rpx;
}
.interactionBar .bottom_item:last-child {
  position: absolute;
  right: 0;
  width: 200rpx;
  height: 56rpx;
  font-size: 32rpx;
  background-color: red;
  border-radius: 1em;
  margin: 16rpx;
  color: #fff;
  line-height: 56rpx;
}
.interactionBar image {
  width: 40rpx;
  height: 40rpx;
}
.detail {
  margin: 20rpx 24rpx;
  padding-top: 20rpx;
  font-size: 35rpx;
}
.detail .price {
  color: red;
}
.detail .clickCount {
  margin-left: 550rpx;
  font-size: 20rpx;
  color: #ccc;
}
.detail .main-image {
  margin-top: 20rpx;
  width: 700rpx;
}
.detail .main-image image {
  width: 100%;
}
.divide {
  height: 20rpx;
  width: 100%;
  background-color: #f1f1f1;
}
.information {
  padding: 20rpx;
}
.information .portrait {
  float: right;
  width: 88rpx;
  height: 88rpx;
}
.information .school {
  font-size: 26rpx;
}
.information .time {
  font-size: 20rpx;
  color: #ccc;
}
.message {
  margin: 20rpx 25rpx;
  margin-bottom: 88rpx;
}
.message .content {
  position: relative;
  margin: 10rpx 0;
}
.message .content .head image {
  float: left;
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.message .content .head .commentId {
  font-size: 30rpx;
}
.message .content .head .commentTime {
  color: #ccc;
  font-size: 18rpx;
}
.message .content .body {
  margin-left: 88rpx;
  font-size: 30rpx;
}
.message .content .foot {
  margin-left: 88rpx;
  width: calc(100vh-88rpx);
}
.message .content .foot .box {
  display: inline-block;
  width: 140rpx;
}
.message .content .foot .box image {
  vertical-align: middle;
  width: 32rpx;
  height: 32rpx;
}
.message .content .foot .box text {
  font-size: 24rpx;
}
.message .content .foot .comment {
  border-radius: 0.2em;
  width: 600rpx;
  background-color: #f1f1f1;
  font-size: 30rpx;
}

